<h2>Sign up</h2>

<div class="border-box">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %><br/>
  <%= f.text_field :name, class: 'reg-form-field' %></div><br/> 

  <div><%= f.label :email %><br />
  <%= f.email_field :email, class: "reg-form-field" %></div><br />

  <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "reg-form-field" %></div><br />

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "reg-form-field" %></div><br />

  <div><%= f.submit "Sign up", class: "reg-button" %></div>
<% end %>
</div>

<br />
<div class="box-links">
  <%= render "devise/shared/links" %>
</div>